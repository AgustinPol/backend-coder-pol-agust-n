<style>
   img {
            width: 120px;
            height: 130px; 
            object-fit: contain ;
        }
</style>

<h2 class="text-danger">Lista de productos</h1>
{{#if products.length }}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Im√°gen</th>
                <th>Id producto</th>
            </tr>
          {{#each products}}
            <tr>
                <td class="text-info font-weight-bold">{{this.title}}</td>
                <td class="text-info font-weight-bold">${{this.price}}</td>
                <td><img src={{this.thumbnail}} alt={{this.title}}></td>
                <td class="text-info font-weight-bold">{{this.id}}</td>
            </tr>
          {{/each}}
        </table>
    </div>
  {{else}}
    <h5 class="alert-danger rounded p-2">No se encontraron productos</h5>  
{{/if}}